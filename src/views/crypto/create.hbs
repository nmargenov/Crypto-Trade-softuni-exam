<main>
    <!-- In case of error, you should display div with class "errorContainer" -->
    <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->

    {{#if error}}
    <div>
        <div class="errorContainer">
            <p>{{error}}</p>
        </div>
    </div>
    {{/if}}
    <section id="create-container">
        <div class="create-container-info">
            <h1>Create Announcement</h1>
            <h4>Post your coins to sell</h4>
            <form method="POST">
                <label>Name:</label>
                <input type="text" id="name" name="name" value="{{name}}" placeholder="Bitcoin">
                <label>Image:</label>
                <input type="text" id="image" name="image" value="{{image}}" placeholder="http://...">
                <label>Price:</label>
                <input type="number" id="price" name="price" value="{{price}}" placeholder="31,166.71">
                <label>Description:</label>
                <textarea id="description" name="description" placeholder="Introduce your coins...">{{description}}</textarea>
                <label>Payment method:</label>
                <select id="" name="paymentMethod">
                        {{{options}}}
                </select>
                <input type="submit" id="btn" value="TRADE"></input>
            </form>
        </div>
    </section>
</main>